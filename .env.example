PORT=3000
TRUST_PROXY=1
COOKIE_SECURE=1
DISABLE_GUEST=1
SOURCE_HTML_DIR=./supplier_html
DATABASE_DIR=./database
VISITOR_TRACKING=1

# OCR tuning (optional)
OCR_MAX_PAGES=4
OCR_SCALE=2.0
OCR_LANG=tur+eng

# Optional: Admin-triggered ChatGPT analysis on Usage page
OPENAI_API_KEY=
OPENAI_MODEL=o3-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_PROJECT_ID=
OPENAI_ORG_ID=

# By default .env values override inherited shell env vars (set 0 to disable)
ENV_FILE_OVERRIDE=1
